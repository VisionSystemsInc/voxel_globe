#!/usr/bin/env bash

set -eu

source /opt/vip/vip.bsh

groupadd user -g ${GROUP_ID} -o
useradd -u ${USER_ID} -o --create-home --home-dir /home/user -g user user

if [ "$1" == "celery" ]; then
  export VIP_DJANGO_DEBUG=${VIP_CELERY_DJANGO_DEBUG}
  cd /home/user
  exec celery worker -n ${NODE_NAME}@$(hostname) --app=voxel_globe.vip --pidfile=${NODE_NAME}.pid -Ofair --loglevel=${VIP_CELERY_LOG_LEVEL}
else
  exec "${@}"
fi