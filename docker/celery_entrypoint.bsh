#!/usr/bin/env bash

groupadd user -g ${GROUP_ID} -o 
useradd -u ${USER_ID} -o --create-home --home-dir /home/user -g user user

cd /home/user

. /opt/vip/vip.bsh

export VIP_DJANGO_DEBUG=${VIP_CELERY_DJANGO_DEBUG}

exec gosu user celery worker -n ${NODE_NAME}@$(hostname) --app=voxel_globe.vip --pidfile=${NODE_NAME}.pid -Ofair --loglevel=${VIP_CELERY_LOG_LEVEL}